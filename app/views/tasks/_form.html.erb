

<%= form_for [@project, @task], html: {class: "form-horizontal"} do |f| %>




<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :description %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :description, class: "form-control"%>
    </div>
  </div>
</div>


<div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :due_date %>
    </div>
    <div class="col-md-4">
      <%= f.date_select :due_date, class: "form-control"%>
    </div>
  </div>

  <% if @task.description != nil %>
  <div class="form-group">
    <div class="field">
      <div class="control-label col-md-2">
        <b><%= f.label :completed %></b>
      </div>
      <div class="col-md-4">
        <%= f.check_box :box %>

      </div>

    </div>
  </div>
    <% end %>



<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit class: "btn btn-primary btn-md active" %>
      <%= link_to 'Cancel', project_tasks_path, class: "btn btn-default" %>
    </div>
  </div>
</div>

<% end %>
