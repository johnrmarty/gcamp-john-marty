<body>
  <p id="notice"><%= notice %></p>
  <div class="container">
    <div class="page-header">
      <div class="pull-right">
        <%= link_to 'New Task', new_project_task_path(@project), class: "btn btn-info" %>
      </div>
      <h1>Tasks for <%=@project.name %></h1>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Description</th>
          <th>Complete</th>
          <th>Due</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @project.tasks.each do |task| %>
        <tr>

          <td><%= task.description %></td>
          <td><%= task.box %></td>
          <td><%= task.due_date %></td>

          <td><div class="text-right">
              <%= link_to 'Show', project_task_path(@project, task), class: "btn btn-info"%>
              <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info"%>
              <%= link_to 'Destroy', project_tasks_path(@project, task), method: :destroy, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
</body>
