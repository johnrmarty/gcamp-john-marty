<body>

  <div class="container">
    <div class="page-header">
      <div class="pull-right">
        <% if current_user.project_owner?(@project) || current_user.admin %> 
        <%= link_to 'Edit', edit_project_path, class: "btn btn-info", id:"rspec-project-edit" %>
        <% end %> 
      </div>
      
      <h1><%= @project.name %></h1>
    </div>

    <ol class="breadcrumb">
  		<li><a href="/projects">Projects</a></li>
      <li><%= link_to @project.name %></li>
        </ol>
	

   
		<strong><%= link_to @project.task_count, project_tasks_path(@project)%></strong> 
    <br>
    <strong><%= link_to @project.membership_count, project_memberships_path(@project) %></strong>

    <br>
    <br>  
    
    <% if current_user.project_owner?(@project) || current_user.admin %>
    <div class="well">
      <div class="form-group">
        <h1>Delete Project</h1>
      </div>
      <div class="form-group">
        <strong><%= "Deleting this project will also delete #{@project.membership_count}, #{@project.task_count} and associated comments" %></strong>
      </div>
      <div class="form-group">
        <%= link_to 'Delete', @project, class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %> 
      </div>
    </div>
    <% end %>     

</div>
</body>
















