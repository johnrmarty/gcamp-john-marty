<body>
  <div class="container">
    <div class="page-header">
      <div class="pull-right">
        <%= link_to 'New User', new_user_path, class: "btn btn-info" %>
      </div>
      <h1>Users</h1>
    </div>


    <table class="table table-striped">

      <thead>
        <th> Name </th>
        <th>  Email </th>
      </thead>

      <tbody>
        <% @users.each do |user| %>


        <tr>
          <td><%= user.fullname %></td>
          <% if user == current_user %>
          <td><%= mail_to user.email %></td>
          <% else %>
          <td><%= nil %></td>
          <% end %> 
          <td><div class= "text-right"></td>
          <td><%= link_to 'Edit', user %></td>

        </tr>
      </tbody>

    <% end %>
    </table>

  </body>
</div>
