 
    <div class="page-header">
      <div class="pull-right">
        <%= link_to 'New User', new_user_path, class: "btn btn-info" %>
      </div>
      <h1>Users</h1>
    </div>


    
<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-3">Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.fullname, user_path(user)%></td>
          <% if current_user.admin? || current_user == user  || @collaborators.include?(user) %>
        <td><%= mail_to user.email %></td>
          <% else %>
        <td></td>
          <% end %>
        <td>
          <% if current_user == user || current_user.admin? %>
            <div class='text-right'>
              <%= link_to 'Edit', user, class: "btn btn-info" %>
              <%= link_to 'Delete', user, class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure'}  %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>





















  
