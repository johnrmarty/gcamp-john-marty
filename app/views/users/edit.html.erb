<div class="page-header">
  <h1> Edit User </h1>
</div>

<%= form_for(@user, html: {class:"form-horizontal"}) do |f| %>


<%= render(:partial => "shared/errors", :locals => {:object => @user}) %> 



<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :first_name %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :first_name, class: "form-control"%>
    </div>
  </div>
</div>


<div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :last_name %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :last_name, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :email %>
      </div>
      <div class="col-md-4">
        <%= f.email_field :email, class: "form-control"%>
      </div>
    </div>

 <div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit @submit, class: "btn btn-primary btn-md active" %>
      <%= link_to 'cancel', users_path, class: "btn btn-default" %>
     <!--  <%= link_to 'delete', @user, method: :delete, data: {confirm: 'Are you Sure?'}, class: "btn btn-danger" %> -->
    </div>
  </div>
</div>

<% end %>
