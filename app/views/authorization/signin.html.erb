

<%= form_tag authorization_path do %>



<div class="col-md-4 col-md-offset-4">
<div class="well">
<h1> Signin to gCamp </h1>
<br>



  <div class="form-group">
      <label class="col-md-4">
        <%= label_tag :email %>
      </label>
      <div class="col-md-12">
        <%= email_field_tag :email, nil, class: "form-control"%>
      </div>
    </div>

  <div class="form-group">
      <label class="col-md-4">
        <%= label_tag :password %>
      </label>
      <div class="col-md-12">
        <%= password_field_tag :password, nil, class: "form-control"%>
      </div>
    </div>

  


<div class="form-group">
  <div class="col-md-12">
    <div class="action">
      <%= submit_tag 'Sign in', class: "btn btn-primary btn-md active" %>   
    </div>
  </div>
</div>

<% end %>
</div>
</div>



